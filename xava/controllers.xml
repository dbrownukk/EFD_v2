<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<controllers>
    
    <!-- Environment variable:
    <env-var name="EFD_v2_DEFAULT_YEAR" value="2017"/> 
    -->
    
    <!-- Session object:
    <object name="EFD_v2_activeYear" class="java.lang.Integer" value="2015" 
    	    scope="global"/>    
    -->
    
    <controller name="EFD">
		<extends controller="Typical" excluded-actions="save"/>
		
	 <action name="save" 
	 		image="save.gif"
	 		mode="detail"
			icon="content-save"
			keystroke="Control S"	
	 		class="efd.actions.MySaveAction"
	 		/>
	</controller> 
    
   <controller name="Spreadsheet">
		<extends controller="TypicalRealExcel"/>
		
	 <action name="scenario" 
	 		mode="detail" 
	 		by-default="if-possible" 
	 		class="efd.actions.CreateXlsFileAction"
	        image="excel.gif"
            icon="file-excel"
             />
	</controller>
	
