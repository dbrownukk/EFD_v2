<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<controllers>
    
    <!-- Environment variable:
    <env-var name="EFD_v2_DEFAULT_YEAR" value="2017"/> 
    -->
    
    <!-- Session object:
    <object name="EFD_v2_activeYear" class="java.lang.Integer" value="2015" 
    	    scope="global"/>  
    	    
    	    
    	    <extends controller="TypicalRealExcel"/>  
	-->    
    <controller name="EFD_v2">
		<extends controller="Typical"/>
		
    <action name="save" mode="detail"
      class="efd.actions.EFDSaveAction" 
      by-default="if-possible"
      image="save.gif"
      icon="content-save"
      keystroke="Control S"/>
	</controller>
 
 

   <controller name="Project">
   <extends controller="Typical"/>
    <action name="save" mode="detail"
      class="org.openxava.actions.SaveAction"
      by-default="if-possible"
      image="save.gif"
      icon="content-save"
      keystroke="Control S">
	  <set property="resetAfter" value="false"/>
	  </action>
	</controller>
    
   <controller name="Spreadsheet">
   <extends controller="TypicalRealExcel"/>
	 <action name="Template Spreadsheet"
	 		mode="detail"
	 		by-default="if-possible"
	 		class="efd.actions.CreateXlsFileAction"
             />
	</controller>
	
	<controller name="LivelihoodZone">		
	<extends controller="Typical"/>
		<action name="new LZ" image="new.gif" hidden="true" icon="library-plus"
			class="efd.actions.NewLZ"/>
		<action name="add LZ" hidden="true" icon="table-row-plus-after"
			class="efd.actions.AddLZ"/>
			
	</controller>

	
	
</controllers>